<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@drawable/questions_bg">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        tools:context=".result_page">

        <!-- RESULT TEXT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfpro_bold"
            android:textColor="@color/white"
            android:text="RESULTS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- LARGER GRID LAYOUT FOR CATEGORIES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/questions_cardbg"
            android:padding="8dp">

            <!-- First row: Developer and Network Specialist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Developer Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/tvDeveloper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Developer\n0%"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>

                <!-- Network Specialist Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/tvNetworkSpecialist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Network\nSpecialist\n0%"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Second row: IT Support and Data & Analytics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- IT Support Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/tvITSupport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="IT Support &amp;\nAdministration\n0%"
                        android:textSize="12sp"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:padding="6dp"/>
                </androidx.cardview.widget.CardView>

                <!-- Data & Analytics Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/tvDataAnalytics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Data &amp;\nAnalytics\n0%"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Third row: UI Designer and Project Manager -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- UI Designer Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/tvUIDesigner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="UI Designer\n0%"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>

                <!-- Project Manager Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/tvProjectManager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Project Manager\n0%"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Fourth row: Cyber Security (full width) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Cyber Security Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/tvCyberSecurity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cyber Security\n0%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/sfpro_bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- FINAL RESULT TEXT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Based on your results, you have strong potential for a career in"
                android:fontFamily="@font/sfpro_bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvRecommendedCareer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data and Analytics."
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
