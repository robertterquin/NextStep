<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".result_page"
    android:background="@drawable/questions_bg">

    <!-- RESULT TEXT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_bold"
        android:textColor="@color/white"
        android:text="RESULT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- LARGER GRID LAYOUT FOR CATEGORIES -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:background="@drawable/questions_cardbg"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="true"
        android:columnOrderPreserved="true"
        android:padding="12dp">

        <!-- Developer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/tvDeveloper"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Developer\n0%"
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Network Specialist Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/tvNetworkSpecialist"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Network\nSpecialist\n0%"
                android:textSize="20sp"
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <!-- IT Support Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/tvITSupport"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="IT Support &amp;\nAdministration\n0%"
                android:textSize="18sp"
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Data & Analytics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/tvDataAnalytics"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Data &amp;\nAnalytics\n0%"
                android:textSize="20sp"
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <!-- UI Designer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/tvUIDesigner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="UI Designer\n0%"
                android:textSize="20sp"
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Project Manager Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/tvProjectManager"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Project Manager\n0%"
                android:textSize="20sp"
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Cyber Security Card (spanning two columns) -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:layout_columnSpan="2"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/tvCyberSecurity"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Cyber Security\n0%"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/sfpro_bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <!-- FINAL RESULT TEXT -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Based on your results, you have strong potential for a career in"
        android:fontFamily="@font/sfpro_bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvRecommendedCareer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data and Analytics."
        android:fontFamily="@font/sfpro_bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"/>
</LinearLayout>
