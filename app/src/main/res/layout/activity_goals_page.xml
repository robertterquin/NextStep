<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".goals_page">

    <!-- Top Layout: Greeting Text & Notification Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sfpro_bold"
            android:text="Good Evening, User"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/notification_bell"
            android:contentDescription="Notification Icon"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Spacer to push navigation to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menubar_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home_icon"
            android:contentDescription="Home"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/nav_tasks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/checked"
            android:contentDescription="Tasks"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/nav_goals"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/target"
            android:contentDescription="Goals"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/userrr"
            android:contentDescription="Profile"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
